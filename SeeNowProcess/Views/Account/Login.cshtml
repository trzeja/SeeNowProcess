
@{
    ViewBag.Title = "Login";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="~/Scripts/angularLogin.js"></script>
</head>
<h2>Login</h2>

<form ng-app="loginForm" name="loginForm" ng-controller="loginCtrl" class="form-horizontal" ng-submit="loginCheck()">
    <div>{{myWelcome}}</div>
    <div class="form-group row">
        <label class="col-sm-2 control-label" for="login"> Login: </label>
        <input class="form-control" type="text" id="login" ng-model="login" required autofocus ng-class="Submited?'ng-dirty':''">
        <p style="color:red" ng-show="(loginForm.login.$dirty || Submited ) && loginForm.login.$error.required">Please enter LOGIN</p>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 control-label" for="password"> Password: </label>
        <input class="form-control" type="password" id="password" ng-model="password" ng-class="Submited?'ng-dirty':''" required autofocus>
        <span style="color:red" ng-show="(loginForm.password.$dirty || Submited ) && loginForm.password.$error.required">Password Required</span>
    </div>
    <div class="form-group row">
        <label class="col-sm-10 control-label"></label>
        <input type="submit" class="form-control btn green_button" style="margin-left: 20%" value="LOGIN"> <!-- ng-click="loginCheck()"-->
    </div>
</form>

