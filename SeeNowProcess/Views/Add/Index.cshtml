@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    ViewBag.Title = "Index";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SeeNowProcess</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/leftmenu.css">

</head>
<!--Anna-->
<body> <!--przesuwa wszystko niewiadomo czemu-->
    <form class="form-horizontal">
        <div class="form-group row">
            <label class="col-sm-2 control-label" for="task_title"> TITLE: </label>
            <input class="col-sm-8 col-sm-offset-2" type="text"  id="task_title">
        </div>
        <div class="form-group row">
            <label class="col-sm-2 control-label" for="task_description"> DESCRIPTION: </label>
            <input class="col-sm-8 col-sm-offset-2" type="text" id="task_description">
        </div>
        <div class="form-group row">
            <label class="col-sm-2 control-label" for="task_deadline"> DEADLINE: </label>
            <input class="col-sm-8 col-sm-offset-2" type="datetime" id="task_deadline">
        </div>
        <div class="form-group row">
            <label class="col-sm-2 control-label" for="task_importance"> IMPORTANCE: </label>
            <input class="col-sm-8 col-sm-offset-2" type="text" id="task_title">
        </div>
        <div class="form-group row">
            <label class="col-sm-10 control-label"></label>
            <button type="submit" class="btn btn-block green_button" style="max-width:300px; align-items: center">ADD TASK</button>
        </div>
    </form>
    <div>
        <img src="~/img/szop_mem.jpg" alt="Upsik - brakuje obrazka" />
    </div>
</body>
